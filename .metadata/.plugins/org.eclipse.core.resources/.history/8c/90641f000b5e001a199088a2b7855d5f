package com.example.demo.controller;

import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.example.demo.dao.PeliculaRepo;
import com.example.demo.model.Pelicula;

@RestController
@RequestMapping("/peliculas")
public class Controller {
	
	@Autowired
	PeliculaRepo repo;
	
	@GetMapping
	public Iterable<Pelicula> get (){
		return repo.findAll();
	}

	@RequestMapping("/getPeli")
	public Optional<Pelicula> getPeli(Integer id) {
		return repo.findById(id.toString());
	}
	
	@RequestMapping("/addPeli")
	public String addPeli(Pelicula peli) {
		repo.save(peli);
		return "Movie Created";
	}
	
	@RequestMapping("/deletePeli")
	public String deletePeli(Integer name) {
		repo.deleteById(name.toString());
		return "Movie Deleted";
	}
	
	@RequestMapping("/modifyPeli")
	public String modifyPeli(Pelicula peli) {
		if(repo.existsById(peli.getId().toString())) {
			this.deletePeli(peli.getId());
			this.addPeli(peli);
		}
		return "Previous movie:"+peli;
	}
}
