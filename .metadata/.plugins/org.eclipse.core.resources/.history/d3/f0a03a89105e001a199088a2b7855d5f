DROP TABLE IF EXISTS `relacion` CASCADE;
DROP TABLE IF EXISTS `actor` CASCADE;
DROP TABLE IF EXISTS `pelicula` CASCADE;
CREATE TABLE `pelicula`
(
    `id` INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
    `title` VARCHAR(255) NOT NULL, 
    `genre` VARCHAR(255),
    `year` VARCHAR(255),
    `oscars` VARCHAR(255)
);

CREATE TABLE `actor`
(
    `id` INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
    `name` VARCHAR(255),
    `surname` VARCHAR(255)
);


