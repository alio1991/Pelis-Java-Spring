DROP TABLE IF EXISTS `pelicula`;
CREATE TABLE `pelicula`
(
    `idMovie` INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
    `title` VARCHAR(255) NOT NULL, 
    `genre` VARCHAR(255),
    `year` VARCHAR(255),
    `oscars` VARCHAR(255)
);

CREATE TABLE `actor`
(
    `idCharacter` INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
    `name` VARCHAR(255),
    `surname` VARCHAR(255)
);

CREATE TABLE `relacion`
(
    `idLink` INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
    `idCharacter` INT NOT NULL FOREIGN KEY,
    `idMovie` INT NOT NULL FOREIGN KEY
);

