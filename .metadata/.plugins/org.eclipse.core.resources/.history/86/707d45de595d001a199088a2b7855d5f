DROP TABLE IF EXISTS `peliculas`;
CREATE TABLE `peliculas`
(
    `score` VARCHAR(9) PRIMARY KEY,
    `name` VARCHAR(255) ,
    `genre` VARCHAR(255),
    `phone` VARCHAR(255)
);

