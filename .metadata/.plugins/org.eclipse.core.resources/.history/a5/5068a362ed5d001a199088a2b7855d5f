DROP TABLE IF EXISTS `pelicula`;
CREATE TABLE `pelicula`
(
    `id` VARCHAR(255)  PRIMARY KEY auto_increment,
    `title` VARCHAR(255)  notnul,
    `genre` VARCHAR(255),
    `year` VARCHAR(255),
    `oscars` VARCHAR(255),
);

CREATE TABLE `actor`
(
    `id` VARCHAR(255)  PRIMARY KEY auto_increment,
    `name` VARCHAR(255)  notnul,
    `surname` VARCHAR(255),
);

CREATE TABLE `relacion`
(
    `id` VARCHAR(255)  PRIMARY KEY auto_increment,
    `idCharacter` VARCHAR(255)  FOREIGN KEY,
    `idMovie` VARCHAR(255)  FOREIGN KEY,
);

INSERT INTO `pelicula` VALUES ('Star Wars','ficción','1995',0);
